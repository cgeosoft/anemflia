<section class="bg-light contact-2">
  <div class="container">
    <div class="row contact-details d-flex flex-column">
      <div class="col-sm-8 m-auto text-center">
        <h2 class="title">{{_base.general.contact_us}}</h2>
        <p class="lead constrain-width mt-4">
          {{_base.general.address}}
          <br>(+30)2283022141 - (+30)6973579509 - anemfliarooms@gmail.com
        </p>
      </div>
      <div class="divider"></div>
      <div class="col-sm-6 m-auto">
        <form class="contact-form mt-4" name="contact" action="https://formspree.io/anemfliarooms@gmail.com" method="POST">
          <div class="row">
            <div class="col-md-6">
              <input type="text" class="form-control-custom mb-4" name="{{_base.general.name}}" placeholder="{{_base.general.name}}">
            </div>
            <div class="col-md-6">
              <input type="text" class="form-control-custom mb-4" name="{{_base.general.surname}}" placeholder="{{_base.general.surname}}">
            </div>
            <div class="col-md-6">
              <input type="text" class="form-control-custom mb-4" name="{{_base.general.phone_txt}}" placeholder="{{_base.general.phone_txt}}">
            </div>
            <div class="col-md-6">
              <input type="text" class="form-control-custom mb-4" name="{{_base.general.mail}}" placeholder="{{_base.general.mail}}">
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <textarea class="form-control-custom mb-4" rows="3" name="{{_base.general.text}}" placeholder="{{_base.general.text}}"></textarea>
            </div>
          </div>
          <div class="d-flex">
            <button type="submit" class="btn btn-primary btn-lg ml-auto">{{_base.general.send}}</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>